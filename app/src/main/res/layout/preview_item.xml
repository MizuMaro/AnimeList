<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="#3D7FAD"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#044770"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#E0E3E7"
            android:scaleType="center"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/previewTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Image 1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#C5E9FF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previewEpisodesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4sp"
            android:text="TextView"
            android:textColor="#FDD2DEE0" />

        <TextView
            android:id="@+id/previewTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4sp"
            android:paddingBottom="4sp"
            android:text="TextView"
            android:textColor="#FDD2DEE0" />
    </LinearLayout>

</androidx.cardview.widget.CardView>